<div class="header">
    <h1>Edit Album #<%= @album.id %></h1>
</div>
<form action="/albums/<%= @album.id %>" method="post">
    <input type="hidden" name="_method" value="put" />
    <label for="name">Name:</label>
    <input type="text" class="text" name="name" placeholder="e.g. Rod Stewart" value='<%= @album.name %>'/>
    <label for="artist_id">Artist:</label>
    <select name="artist_id">
        <option>Please Select</option>
        <% @artists.each do |artist| %>
            <option value="<%= artist.id %>" <%= "selected" if artist.id == @album.artist_id %> ><%= artist.name %></option>
        <% end %>
    </select>
    <input type="submit" class="button" name="create_album" value="Save"/>
</form>
<form action="/albums/<%= @album.id %>" method="post">
    <input type="hidden" name="_method" value="delete" />
    <input type="submit" class="button delete" value="DELETE" />
</form>
